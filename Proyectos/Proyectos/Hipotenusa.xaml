<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyectos.Hipotenusa"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="300">
            <Image Source="matematicas.png"/>
            <Label Text="Calcula la hipotenusa de un triangulo rectangulo" 
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#DB255D"></Label>
            <Entry Placeholder="Ingrese el Cateto 1"
                   FontSize="15"
                   x:Name="Cateto1_"
                   Keyboard="Numeric"></Entry>

            <Entry Placeholder="Ingrese el Cateto 2"
                   FontSize="15" 
                   x:Name="Cateto2_"
                   Keyboard="Numeric"></Entry>

            <Entry Placeholder="La Hipotenusa es: "
                   FontSize="15" 
                   x:Name="Hipotenusa_"
                   IsEnabled="False"></Entry>

            <Button Text="Calcular"
                   FontSize="15" x:Name="Cal_Hipotenusa" Clicked="Cal_Hipotenusa_Clicked"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>